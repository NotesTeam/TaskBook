<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_note_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_set_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"/>
        <Button
            android:id="@+id/button_save_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_task_note_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_star_indigo_500_24dp" />

        <ImageView
            android:id="@+id/part_task_note_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_star_half_indigo_500_24dp" />

        <ImageView
            android:id="@+id/skills_task_note_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_lightbulb_outline_indigo_500_24dp" />

        <ImageView
            android:id="@+id/unimportant_task_note_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_help_outline_indigo_500_24dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/title_edit_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:hint="@string/title"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/text_edit_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0000"
        android:gravity="top"
        android:hint="@string/text"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:textCursorDrawable="@drawable/color_cursor" />

</LinearLayout>
